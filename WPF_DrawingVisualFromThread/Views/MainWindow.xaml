<Window
    x:Class="WPF_DrawingVisualFromThread.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:WPF_DrawingVisualFromThread.Views.Canvas"
    Title="WPF_DrawingVisualFromThread"
    Width="800"
    Height="450"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen">

    <Grid>
        <c:CustomCanvas
            Background="White"
            ClipToBounds="True"
            ItemsSource="{Binding Items, Mode=OneTime}"/>
    </Grid>

</Window>
